# XTimeline TruthEngine Configuration

# =============================================================================
# GOOGLE AI API (Required for BAML/Gemini 2.5 Flash)
# =============================================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# QDRANT DEPLOYMENT MODE
# =============================================================================
# Options: memory, local, docker, cloud
# - memory: In-memory, no persistence (testing only)
# - local: Local persistent storage (recommended for development)
# - docker: Docker container (docker-compose up -d qdrant)
# - cloud: Qdrant Cloud managed service
QDRANT_MODE=local

# --- Local Mode ---
QDRANT_STORAGE_PATH=./data/qdrant

# --- Docker Mode ---
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# --- Cloud Mode ---
QDRANT_URL=https://your-cluster.aws.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_cloud_api_key

# --- All Modes ---
QDRANT_TIMEOUT=30
QDRANT_PREFETCH=10

# =============================================================================
# EMBEDDING MODEL
# =============================================================================
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# =============================================================================
# SEARCH SETTINGS
# =============================================================================
SEARCH_LIMIT=10
MIN_CREDIBILITY=0.3

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
